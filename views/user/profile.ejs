<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - InstaKilogram</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        /* --- Variables --- */
        :root {
            --bg-navy: #0a192f;
            --card-navy: #112240;
            --text-white: #e6f1ff;
            --text-gray: #8892b0;
            --btn-primary: #1d4ed8;
            --accent-cyan: #64ffda;
            --border-color: rgba(255, 255, 255, 0.1);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-navy);
            color: var(--text-white);
            min-height: 100vh;
            padding: 20px 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* --- Back Button --- */
        .back-nav {
            margin-bottom: 30px;
        }
        
        .back-btn {
            text-decoration: none;
            color: var(--text-gray);
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: color 0.3s;
        }

        .back-btn:hover {
            color: var(--accent-cyan);
        }

        /* --- Profile Header Section --- */
        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            background-color: var(--card-navy);
            padding: 30px;
            border-radius: 16px;
            border: 1px solid var(--border-color);
        }

        .profile-pict {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 30px;
            border: 3px solid var(--btn-primary);
        }

        .profile-info {
            flex: 1;
        }

        .profile-name {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--text-white);
        }

        .profile-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        /* --- Buttons --- */
        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
            display: inline-block;
        }

        .btn-primary {
            background-color: var(--btn-primary);
            color: white;
        }
        .btn-primary:hover { background-color: #2563eb; }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--text-gray);
            color: var(--text-white);
        }
        .btn-outline:hover { border-color: var(--text-white); background: rgba(255,255,255,0.05); }

        .btn-add {
            background-color: var(--accent-cyan);
            color: var(--bg-navy);
            font-weight: 600;
        }
        .btn-add:hover { background-color: #4adbc0; }

        /* --- Divider --- */
        hr {
            border: 0;
            height: 1px;
            background: var(--border-color);
            margin: 20px 0 30px 0;
        }

        /* --- Post Grid --- */
        .grid-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
        }

        .post-item {
            position: relative;
            aspect-ratio: 1 / 1; /* Membuat kotak selalu persegi */
            overflow: hidden;
            border-radius: 8px;
            background-color: #112240;
            border: 1px solid var(--border-color);
            group: pointer;
        }

        .post-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .post-item:hover .post-img {
            transform: scale(1.05);
        }

        /* Edit Badge (Overlay) */
        .edit-badge {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.75rem;
            text-decoration: none;
            backdrop-filter: blur(2px);
            opacity: 0.8;
            transition: opacity 0.2s;
        }

        .edit-badge:hover {
            background-color: var(--btn-primary);
            opacity: 1;
        }

        /* Responsiveness */
        @media (max-width: 600px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
                padding: 20px;
            }
            .profile-pict { margin: 0 0 15px 0; }
            .profile-actions { justify-content: center; }
            .grid-container { gap: 5px; } /* Gap lebih kecil di HP */
        }
    </style>
</head>
<body>

    <div class="container">
        
        <div class="back-nav">
            <a href="/user/home" class="back-btn">&larr; Back to Home</a>
        </div>

        <div class="profile-header">
            <img src="<%= user.UserProfile.profilePict ? user.UserProfile.profilePict : 'https://via.placeholder.com/150' %>" 
                 class="profile-pict" 
                 alt="Profile Picture"
                 onerror="this.src='https://via.placeholder.com/150'">

            <div class="profile-info">
                <h2 class="profile-name"><%= user.UserProfile.name %></h2>
                
                <div class="profile-actions">
                    <% if(isOwnProfile) { %>
                        <a href="/user/<%= user.id %>/edit" class="btn btn-outline">Edit Profile</a>
                        <a href="/user/<%= user.id %>/addPost" class="btn btn-add">+ Add Post</a>
                    <% } else { %> 
                        <button class="btn btn-primary" style="width: 100px;">Follow aja dulu</button>
                    <% } %>
                </div>
            </div>
        </div>

        <hr>

        <div class="grid-container">
            <% if (user.UserProfile.Posts.length === 0) { %>
                <div style="grid-column: 1/-1; text-align: center; padding: 40px; color: var(--text-gray);">
                    No posts yet.
                </div>
            <% } %>

            <% user.UserProfile.Posts.forEach(post => { %>
                <div class="post-item">
                    <img src="<%= post.posting %>" class="post-img" alt="User Post">
                    
                    <% if(isOwnProfile) { %>
                        <a href="/user/<%= user.id %>/editpost/<%= post.id %>" class="edit-badge">
                            âœŽ Edit
                        </a>
                    <% } %>
                </div>
            <% }) %>
        </div>

    </div>

</body>
</html>